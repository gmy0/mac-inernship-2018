<Window x:Class="Client.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="ChatWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblGreeting" Content="" HorizontalAlignment="Left" Margin="44,33,0,0" VerticalAlignment="Top" Height="28" Width="74"/>
        <TextBox x:Name="txbChat" HorizontalAlignment="Left" Height="143" Margin="154,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="333"/>
        <TextBox x:Name="txbMessage" HorizontalAlignment="Left" Height="23" Margin="275,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212"/>
        <Label Content="Enter message&#xD;&#xA;" HorizontalAlignment="Left" Margin="154,276,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.005,-0.574" Width="87"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="412,329,0,0" VerticalAlignment="Top" Width="75" Click="btnSend_Click"/>
        <Button x:Name="btnLogOut" Content="Log Out" HorizontalAlignment="Left" Margin="656,41,0,0" VerticalAlignment="Top" Width="75" Click="btnLogOut_Click"/>

    </Grid>
</Window>
